{
  "name": "yt-speed-control",
  "version": "1.0.0",
  "description": "YouTube Speed Control Extension",
  "scripts": {
    "test": "jest --runInBand --testPathIgnorePatterns=extension.test.js",
    "test:watch": "jest --watch --runInBand --testPathIgnorePatterns=extension.test.js",
    "test:e2e": "jest --runInBand --testMatch=**/extension.test.js",
    "lint": "web-ext lint",
    "build": "web-ext build --overwrite-dest",
    "build:dev": "node -e \"require('child_process').execSync(process.platform==='win32'?'build.bat dev':'./build.sh dev',{stdio:'inherit'})\"",
    "build:release": "node -e \"require('child_process').execSync(process.platform==='win32'?'build.bat release':'./build.sh release',{stdio:'inherit'})\""
  },
  "devDependencies": {
    "geckodriver": "^4.5.1",
    "jest": "^29.7.0",
    "selenium-webdriver": "^4.27.0",
    "web-ext": "^8.3.0"
  }
}
